<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/Relative_layer_heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="vertical"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Ref No"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editTextCustomer_Code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/txt_1"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Name"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editText2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:hint="@string/compulsory"
                        android:textColorHint="@color/menucolor"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="NIC "
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editTextCNic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittextstyle"
                        android:maxLength="12"
                        android:padding="5dp"
                        android:textColorHint="@color/colorAccent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/txt_12"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Address Line 1 "
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editText7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextstyle"
                        android:hint="@string/compulsory"
                        android:padding="5dp"
                        android:textColorHint="@color/menucolor" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/txt_13"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Address Line 2 "
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editText8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittextstyle"
                        android:hint="@string/compulsory"
                        android:padding="5dp"
                        android:textColorHint="@color/menucolor" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/txt_14"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="City "
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    //

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editText9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittextstyle"
                        android:hint="@string/compulsory"
                        android:padding="5dp"
                        android:textColorHint="@color/menucolor"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/txt_15"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Mobile "
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editText10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittextstyle"
                        android:gravity="fill_horizontal"
                        android:hint="@string/compulsory"
                        android:maxLength="14"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:textColorHint="@color/menucolor" />

                </TableRow>


               <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/txt_18"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Email "
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all" />

                    <com.example.finalproject_gcns.utils.CustomFonts
                        android:id="@+id/editText20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittextstyle"
                        android:ems="10"
                        android:gravity="fill_horizontal"
                        android:hint="*"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColorHint="@color/menucolor" />

                </TableRow>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#dcdcdc"></View>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_save"
                    android:textSize="18sp" />

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>


</RelativeLayout>